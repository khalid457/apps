<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="top|center"
	android:background="#D1C3C2"
	android:orientation="vertical">

	<ImageView
		android:src="@drawable/image_3"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxHeight="150dp"
		android:maxWidth="150dp"/>

	<TextView
		android:text="Did you know you can determine the temperature outside by counting the number of chirps the cricket makes? Just count the number of chirps one makes in 25 seconds and place that number in the box below."
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="15sp"
		android:layout_gravity="center"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:onClick="onBtnClick"/>

	<EditText
		android:layout_width="wrap_content"
		android:inputType="numberSigned"
		android:layout_height="wrap_content"
		android:ems="10"
		android:layout_marginTop="10dp"
		android:hint="number of chirps"
		android:id="@+id/mainEditText1"
		android:gravity="center"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Calculate Temperature"
		android:background="#6A483F"
		android:layout_marginTop="10dp"
		android:layout_gravity="center"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:onClick="onBtnClick"
		android:textColor="#FFFFFF"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Small Text"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_marginTop="10dp"
		android:id="@+id/mainTextView1"
		android:gravity="center"
		android:layout_marginLeft="55dp"
		android:layout_marginRight="55dp"/>

</LinearLayout>

